<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>

  <system.serviceModel>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true"/>
    <!-- 바인딩 설정 -->
    <bindings>
      <webHttpBinding>
        <!-- 여기서 설정한 binding 들이 아래 서비스 인터페이스 endpoint의 설정값으로 쓰임.-->
        <binding name="webHttp" openTimeout="00:00:05" closeTimeout="00:00:05" sendTimeout="00:00:05" receiveTimeout="00:00:05" maxBufferPoolSize="2147483647">
          <security mode="None">
          </security>
        </binding>
      </webHttpBinding>
    </bindings>
    <!-- 서비스 설정 -->
    <services>
      <!-- 서비스 클래스 설정 -->
      <service name="RestAPIServerLibrary.Service" behaviorConfiguration="svcBehaviour">
        <host>
          <baseAddresses>
            <add baseAddress="http://10.174.179.159:8080" />
          </baseAddresses>
        </host>
        <!-- 서비스 인터페이스 설정, 여기서는 address가 적용이 안됨.. 왠지 모름.. 단순히 인터페이스를 바인딩시키는 역할 해주고.. 실제 uri는 인터페이스에 attribute로 작성해야함 -->
        <endpoint address="" contract="RestAPIServerLibrary.IService" binding="webHttpBinding" bindingConfiguration="webHttp" behaviorConfiguration="web"></endpoint>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="svcBehaviour">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>